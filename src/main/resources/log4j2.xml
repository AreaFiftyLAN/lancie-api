<Configuration status="WARN">
    <Properties>
        <Property name="PATTERN">%clr{%d{DEFAULT}}{faint} %clr{%5p} %clr{[%15.15t]}{faint} %clr{%-40.40c{1.}}{yellow} %clr{:}{faint} %m%n%wEx</Property>
    </Properties>
    <CustomLevels>
        <CustomLevel name="A5L" intLevel="350" />
    </CustomLevels>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="${PATTERN}"/>
        </Console>
        <File name="a5l" fileName="logs/json.log">
            <JsonLayout complete="true" compact="true"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="TRACE">
            <AppenderRef ref="STDOUT" level="INFO"/>
            <AppenderRef ref="a5l" level="INFO"/>
        </Root>
    </Loggers>
</Configuration>
